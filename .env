# Application Settings
APP_NAME="AI Medical Record Summarizer"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_URL=sqlite:///./medical_summarizer.db

# File Uploads
UPLOAD_FOLDER=./data/raw_records
MAX_CONTENT_LENGTH=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,txt,docx

# Model Configuration
MODEL_NAME=emilyalsentzer/Bio_ClinicalBERT
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Vector Database
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=medical_knowledge

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security (Update these in production)
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (Add your API keys here)
# OPENAI_API_KEY=your-openai-api-key
# HUGGINGFACE_HUB_TOKEN=your-huggingface-token
